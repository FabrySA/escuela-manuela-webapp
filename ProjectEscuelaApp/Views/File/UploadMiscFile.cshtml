@model WebEscuelaProject.Models.MiscFileModel

@{
    ViewData["Title"] = "Cargar Archivos Varios";


    <style>
        .form-control {
            border: 1px solid rgba(0, 0, 0, 0.2);
        }

        .dropdown-toggle {
            background-color: #ffffff;
        }
    </style>
}

<div class="container-fluid">
    <div class="row justify-content-center align-items-center">
        <div class="col-md-4" style="color: black; background-color: #f8f9fa; padding: 20px; border-radius: 10px;">

            <h1 style="color: black; text-align: center;">Cargar Archivos Varios</h1>
            <hr />

            @using (Html.BeginForm("UploadMiscFile", "File", FormMethod.Post, new { id = "filesForm", enctype = "multipart/form-data" }))
            {

                <br>
                <div class="form-group">
                    Descripción del Archivo
                    @Html.TextBoxFor(model => model.file_visualName, new { @class = "requiredfields form-control", @id = "name", @style = "background-color: white;color: black" })
                </div>
                <br>
                <div class="form-group">
                    Archivo
                    <input asp-for="file" id="fileInput" accept=".pdf, .doc, .docx, .xls, .xlsx, .ppt, .pptx, .txt, .rtf, .odt" type="file" id="file" class="requiredfields form-control" />
                    <p class="warnings" hidden id="badFile" style="color:red; margin-top: 5px;">Este tipo de archivo no está permitido</p>
                </div>
                <br>
                <hr />
                <br>

                <div class="form-group d-flex justify-content-center">
                    <p class="warnings" hidden id="missingFields" style="color:red; margin-top: 5px;">No pueden quedar campos vacíos</p>
                </div>
                <div class="form-group d-flex justify-content-center">
                    <button type="submit" id="submitBTN" class="btn btn-primary submitBTN"><i class="fa fa-check-square" aria-hidden="true"></i> Subir Archivo</button>
                </div>

            }
        </div>
    </div>
</div>
