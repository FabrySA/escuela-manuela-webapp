@model WebEscuelaProject.Models.AccountModel

@{
    Layout = null;
    ViewData["Title"] = "Restablecer Contraseña";
}


<html>
<head>
    <title>@ViewData["Title"]</title>
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link rel="shortcut icon" href="~/Template/img/logoEscuela.png" />

    <link href="~/Template/css/app.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600&display=swap" rel="stylesheet">
</head>

<body>
    <main class="d-flex w-100">
        <div class="container d-flex flex-column">
            <div class="row vh-100">
                <div class="col-sm-10 col-md-8 col-lg-6 col-xl-5 mx-auto d-table h-100">

                    @if (Model != null)
                    {
                        if (Model.ResponseMessage == "Success")
                        {
                            <div class="text-center mt-4">
                                <h1 class="h2">Solicitud Enviada</h1>
                                <p class="lead">
                                    Si la cuenta existe, recibirá un correo electrónico para restablecer su contraseña, tiene 24 horas para hacerlo.
                                </p>
                                <a href="@Url.Action("Index", "Home")" class="btn btn-success">Regresar al Inicio</a>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="d-table-cell align-middle">

                            <div class="text-center mt-4">
                                <h1 class="h2">Restablecer Contraseña</h1>
                                <p class="lead">
                                    Ingrese su correo para solicitar un restablecimiento de contraseña
                                </p>
                            </div>

                            <div class="card">
                                <div class="card-body">
                                    <div class="m-sm-3">
                                        @using (Html.BeginForm("RequestPasswordReset", "Account", FormMethod.Post, new { @id = "requestPassRstForm" }))
                                        {
                                            <div class="mb-3">
                                                <label class="form-label">Ingrese el correo electrónico registrado</label>
                                                @Html.TextBoxFor(model => model.user_email, new
                                        {@class = "form-control form-control-lg", @id = "mail", @placeholder="Ingrese su Correo"})
                                                <p class="warnings" id="missingMail" hidden style="color:red; margin-top: 5px;">Ingrese Un Correo Válido</p>
                                            </div>
                                            <div class="d-grid gap-2 mt-3">
                                                <input type="submit" value="Restablecer Contraseña" class="btn btn-lg btn-primary" />
                                            </div>

                                            <div class="d-grid gap-2 mt-3">
                                                <a href="@Url.Action("Login", "Account")" class="btn btn-light">Regresar</a>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </main>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js"></script>


</body>
</html>
