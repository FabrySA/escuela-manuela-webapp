@{
    ViewData["Title"] = "Confirmación";

    <style>
        .btn-back {
            display: inline-block;
            padding: 10px 20px;
            font-size: 16px;
            text-align: center;
            text-decoration: none;
            background-color: #4CAF50;
            color: #fff;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

            .btn-back:hover {
                background-color: #222e3c;
            }

        .image-container {
            text-align: center;
        }

            .image-container img {
                max-width: 20%;
                height: 20%;
                margin-bottom: 20px;
            }
    </style>
}

<main class="d-flex w-100">
    <div class="container d-flex flex-column">
        <div class="">
            <div class="col-sm-10 col-md-8 col-lg-6 col-xl-5 mx-auto d-table h-100">

                <div class="d-table-cell align-middle">

                    <div class="text-center mt-4">
                        <div class="image-container">
                            <img src="~/Template/img/greenCheck.png" alt="">
                        </div>
                        <h1 class="h2">¡ÉXITO!</h1>
                        <p class="lead">
                            El archivo se ha sido subido correctamente <br /><br>

                            <a href='@Url.Action("Index", "Home")' class="btn-back">
                                <i data-feather="home"></i> Volver a Inicio
                            </a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
